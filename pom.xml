			</dependency>
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>insurance-crm-app</artifactId>
				<version>${project.version}</version>
				<type>ear</type>
			</dependency>
			<!-- tech -->
			<dependency>
