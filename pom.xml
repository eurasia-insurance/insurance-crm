		<java-commons.version>1.3</java-commons.version>
		<!-- validation -->
		<javax-validation-commons.version>1.1</javax-validation-commons.version>
		<payara-hibernate-validation.version>1.1.1</payara-hibernate-validation.version>
		<!-- tech -->
		<insurance-domain.version>2.5.2</insurance-domain.version>
		<!-- EJB clients -->
